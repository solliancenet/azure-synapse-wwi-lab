         "properties":{
            "rights":[
               "Listen",
               "Manage",
               "Send"
            ]
         }
      },
      {
         "type":"Microsoft.EventHub/namespaces/eventhubs",
         "apiVersion":"2017-04-01",
         "name":"[concat(variables('eventHubNamespace'), '/', parameters('eventHubName'))]",
         "location":"Central US",
         "dependsOn":[
            "[resourceId('Microsoft.EventHub/namespaces', variables('eventHubNamespace'))]"
